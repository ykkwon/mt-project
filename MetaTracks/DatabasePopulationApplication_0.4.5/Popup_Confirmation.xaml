        <Button x:Name="NoButton" Grid.ColumnSpan="2" Content="No&#xA;" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" Width="130" Height="22" Click="NoButton_OnClick"/>

    </Grid>
</Window>
